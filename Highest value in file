import java.io.*;
import java.util.*;

public class NumberProcessor {

    public static void main(String[] args) {
        // File paths
        String inputFile = "input.txt";
        String outputFile = "output.txt";

        // Initialize Scanner and PrintWriter
        Scanner scanner = null;
        PrintWriter writer = null;

        try {
            // Read from the input file
            scanner = new Scanner(new File(inputFile));
            scanner.useDelimiter(",");  // Assume numbers are separated by commas

            // Variables to track the highest number
            int maxNumber = Integer.MIN_VALUE;
            while (scanner.hasNextInt()) {
                int num = scanner.nextInt();
                if (num > maxNumber) {
                    maxNumber = num;
                }
            }

            // Calculate the sum of natural numbers up to the highest number
            int sum = calculateSum(maxNumber);

            // Write the result to the output file
            writer = new PrintWriter(new File(outputFile));
            writer.println("The highest number: " + maxNumber);
            writer.println("Sum of natural numbers up to " + maxNumber + ": " + sum);

        } catch (FileNotFoundException e) {
            System.err.println("File not found: " + e.getMessage());
        } finally {
            // Close resources
            if (scanner != null) {
                scanner.close();
            }
            if (writer != null) {
                writer.close();
            }
        }
    }

    // Method to calculate the sum of natural numbers up to n
    public static int calculateSum(int n) {
        return (n * (n + 1)) / 2;  // Sum of the first n natural numbers
    }
}
