<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.banglaquizapp.LoginController">
    <Text text="বাংলা কুইজ অ্যাপে স্বাগতম!" layoutX="100" layoutY="50"/>
    <TextField fx:id="idField" promptText="আপনার ID লিখুন" layoutX="100" layoutY="100"/>
    <TextField fx:id="emailField" promptText="আপনার ইমেইল লিখুন" layoutX="100" layoutY="150"/>
    <Button fx:id="startQuizButton" text="কুইজ শুরু করুন" onAction="#startQuiz" layoutX="100" layoutY="200"/>
</AnchorPane>
